<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <style>
        .mainDiv {
            display: flex;
            min-height: 100vh;
            align-items: center;
            justify-content: center;
            background-color: #f9f9f9;
            font-family: 'Open Sans', sans-serif;
        }

        .cardStyle {
            width: 500px;
            background: #fff;
            padding: 36px;
            border-radius: 4px;
            box-shadow: 0px 0 2px 0 rgba(0, 0, 0, 0.25);
        }

        .inputDiv {
            position: relative;
            margin-bottom: 20px;
        }

        input {
            width: 100%;
            height: 40px;
            font-size: 16px;
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 0 11px;
        }

        .ct_show_pass {
            position: absolute;
            top: 45px;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
        }

        .submitButton {
            width: 100%;
            height: 40px;
            color: #fff;
            background-color: #065492;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

        .error {
            color: red;
            font-size: 12px;
            margin-top: 5px;
        }
    </style>
</head>

<body>
    <div class="mainDiv">
        <div class="cardStyle">
            <form id="resetForm">
                <input type="hidden" id="token" name="token" value="<%= token %>">
                <h2 class="text-center">Reset Password</h2>

                <div class="inputDiv">
                    <label for="password">New Password</label>
                    <input type="password" id="password" name="password" required>
                    <span class="ct_show_pass" onclick="togglePassword('password', this)"><i class="fa fa-eye-slash"></i></span>
                    <div class="error" id="passwordError"></div>
                </div>

                <div class="inputDiv">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirm_password" required>
                    <span class="ct_show_pass" onclick="togglePassword('confirmPassword', this)"><i class="fa fa-eye-slash"></i></span>
                    <div class="error" id="confirmPasswordError"></div>
                </div>

                <button type="submit" class="submitButton">Update Password</button>
                <p id="message" class="text-center mt-2"></p>
            </form>
        </div>
    </div>

    <script>
        function togglePassword(fieldId, element) {
            const passwordField = document.getElementById(fieldId);
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                element.innerHTML = '<i class="fa fa-eye"></i>';
            } else {
                passwordField.type = 'password';
                element.innerHTML = '<i class="fa fa-eye-slash"></i>';
            }
        }

        $(document).ready(function () {
            $("#resetForm").submit(function (e) {
                e.preventDefault();
                let password = $("#password").val();
                let confirmPassword = $("#confirmPassword").val();
                let token = $("#token").val();

                if (password.length < 6) {
                    $("#passwordError").text("Password must be at least 6 characters long.");
                    return;
                } else {
                    $("#passwordError").text("");
                }

                if (password !== confirmPassword) {
                    $("#confirmPasswordError").text("Passwords do not match");
                    return;
                } else {
                    $("#confirmPasswordError").text("");
                }

                $.ajax({
                    url: "<%= resetLink %>reset-password",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({ password, token }),
                    success: function (response) {
                        $("#message").text(response.message).css("color", "green");
                        if (response.success) {
                            localStorage.setItem("passwordReset", "true");
                            window.location.href = response.redirect;
                        }
                    },
                    error: function (xhr) {
                        $("#message").text(xhr.responseJSON.message).css("color", "red");
                    }
                });
            });
        });
    </script>
</body>
</html>